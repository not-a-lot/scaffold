<!-- Mail composer formular

     Notes:
    - Root element called Alert for historical reasons
   -->
<Form Tag="Alert" xmlns:xt="http://ns.inria.org/xtiger">
  <Row>
    <Field Key="date" Tag="Date" W="4" Gap="1" loc="term.date">Date</Field>
    <Field Key="sender" Tag="Sender" W="8" Gap="1" loc="term.sender">De</Field>
  </Row>

  <Row>
    <Cell>
      <Field Key="addressees" Tag="Addressees" W="12" Gap="1" loc="term.recipient">Ã€</Field>
    </Cell>
  </Row>

  <Row>
    <Field Key="subject" Tag="Subject" W="12" Gap="1" loc="term.subject">Sujet</Field>
  </Row>

  <Row>
    <Field Key="message" Tag="Message" W="12" Gap="1" loc="term.message">Message</Field>
  </Row>

  <Bindings>
    <Require Keys="addressees subject"/>
  </Bindings>

  <Plugins>
    <Text Keys="subject"/>
    <MultiText Keys="message" Mode="enhanced"/>
  </Plugins>

  <Hints>
    <Hint Keys="addressees" flag="auto" data-placement="right">You can remove and/or add new recipients to the default list generated by the case tracker</Hint>
    <Hint Keys="subject" data-placement="right">You are welcome to personalize the default e-mail subject generated by the case tracker</Hint>
    <Hint Keys="message" flag="auto" data-placement="right">You are welcome to personalize the default e-mail message generated by the case tracker</Hint>
  </Hints>

</Form>
